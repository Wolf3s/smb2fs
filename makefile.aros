CPU ?= i386

CC    = $(CPU)-aros-gcc
STRIP = $(CPU)-aros-strip

TARGET  = smb2-handler
VERSION = 53

LIBSMB2DIR = libsmb2-git

OPTIMIZE = -O2 -fno-common -fomit-frame-pointer
DEBUG    = -g
INCLUDES = -I. -I./$(LIBSMB2DIR)/include
DEFINES  = 
WARNINGS = -Wall -Werror

CFLAGS  = $(OPTIMIZE) $(DEBUG) $(INCLUDES) $(DEFINES) $(WARNINGS)
LDFLAGS = -nostartfiles
LIBS    = -larosc -ldebug

MKFLAGS =

ifneq (i386,$(CPU))
	MKFLAGS += CPU=$(CPU)
endif

ifneq (,$(SYSROOT))
	CFLAGS  := --sysroot=$(SYSROOT) $(CFLAGS)
	LDFLAGS := --sysroot=$(SYSROOT) $(LDFLAGS)
	MKFLAGS += SYSROOT=$(SYSROOT)
endif

SRCS = start_os3.c main.c mui-password-req.c error-req.c time.c strdup.c malloc.c

OBJS = $(addprefix obj-aros/,$(SRCS:.c=.o))
DEPS = $(OBJS:.o=.d)

.PHONY: all
all: bin-aros/$(TARGET)

-include $(DEPS)

obj-aros/%.o: src/%.c
	@mkdir -p $(dir $@)
	$(CC) -MM -MP -MT $(@:.o=.d) -MT $@ -MF $(@:.o=.d) $(CFLAGS) $<
	$(CC) $(CFLAGS) -c -o $@ $<

.PHONY: build-libsmb2
build-libsmb2:
	$(MAKE) -C $(LIBSMB2DIR) -f makefile.aros bin-aros/libsmb2.a $(MKFLAGS)

$(LIBSMB2DIR)/bin-aros/libsmb2.a: build-libsmb2
	@true

bin-aros/$(TARGET).debug: $(OBJS) $(LIBSMB2DIR)/bin-aros/libsmb2.a
	@mkdir -p $(dir $@)
	$(CC) $(LDFLAGS) -o $@ $^ $(LIBS)

bin-aros/$(TARGET): $(OBJS) $(LIBSMB2DIR)/bin-aros/libsmb2.a
	@mkdir -p $(dir $@)
	$(CC) -s $(LDFLAGS) -o $@ $^ $(LIBS)

.PHONY: clean
clean:
	$(MAKE) -C $(LIBSMB2DIR) -f makefile.aros clean
	rm -rf bin-aros obj-aros

.PHONY: revision
revision:
	bumprev -e is $(VERSION) $(TARGET)

